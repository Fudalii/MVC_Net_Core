@page
@model RestaurantRazor.Pages.MenuItems.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MenuItem[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenuItem[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenuItem[0].Imege)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenuItem[0].Spicyness)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenuItem[0].Price)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].CategoryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem[0].FoodType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MenuItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@item.Imege" style="width: 50px" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spicyness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodType.Id)
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
